{
  "name": "@voilajsx/flux",
  "version": "1.0.0",
  "description": "Highly reliable agentic backend microservices framework built for scale",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "NODE_NO_WARNINGS=1 nodemon --exec \"node --loader ts-node/esm\" src/server.ts",
    "test": "vitest run",
    "validate": "npm run build && npm run test",
    "clean": "rm -rf dist",
    "lint": "echo 'Use npm run flux:lint for FLUX Framework linting' && tsc --noEmit",
    "flux:schema": "node scripts/index.js schema",
    "flux:contract": "node scripts/index.js contract",
    "flux:lint": "node scripts/index.js lint",
    "flux:test": "node scripts/index.js test",
    "flux:types": "node scripts/index.js types",
    "flux:compliance": "node scripts/compliance.js",
    "flux:help": "node scripts/index.js help",
    "flux:health": "curl -f http://localhost:3000/health || echo 'Health check failed'",
    "flux:manifest": "node -e \"import('./dist/platform/monitor.js').then(m => m.generateManifest())\"",
    "deploy": "npm run build && node -e \"import('./dist/platform/deploy.js').then(m => m.deployToFly())\"",
    "deploy:staging": "NODE_ENV=staging npm run deploy",
    "flux:agent": "node scripts/agent.js",
    "flux:build": "npm run build",
    "flux:dev": "npm run dev",
    "flux:start": "npm run start"
  },
  "keywords": [
    "flux",
    "framework",
    "hello-world",
    "voilajsx",
    "appkit",
    "express",
    "agentic-development",
    "endpoint-isolation",
    "contract-driven",
    "backend-framework",
    "api-framework",
    "microservices"
  ],
  "author": "FLUX Framework Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "@voilajsx/appkit": "^1.0.0",
    "es-object-atoms": "^1.1.1",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^9.32.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/voilajsx/flux.git"
  },
  "bugs": {
    "url": "https://github.com/voilajsx/flux/issues"
  },
  "homepage": "https://github.com/voilajsx/flux#readme",
  "flux": {
    "framework": "FLUX",
    "version": "1.0.0",
    "features": {
      "agentic-development": true,
      "contract-validation": true,
      "endpoint-isolation": true,
      "zero-breaking-changes": true
    },
    "validation": {
      "coverage-requirement": "90%",
      "performance-threshold": "80/100",
      "type-safety": "100%"
    }
  }
}
