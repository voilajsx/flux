{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FLUX Framework Blueprint Schema",
  "description": "Schema for {feature}.requirements.yml files",
  "type": "object",
  "required": ["name", "description", "version", "purpose", "user_stories"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Feature name (lowercase, hyphens allowed)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Brief feature description"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "owner": {
      "type": "string",
      "description": "Team or person responsible"
    },
    "created": {
      "oneOf": [{ "type": "string" }, { "type": "object" }],
      "description": "Creation date (any format)"
    },
    "last_updated": {
      "oneOf": [{ "type": "string" }, { "type": "object" }],
      "description": "Last update timestamp"
    },
    "purpose": {
      "type": "string",
      "minLength": 20,
      "description": "Why this feature exists"
    },
    "business_value": {
      "type": "string",
      "description": "Business impact description"
    },
    "target_users": {
      "type": "string",
      "description": "Who uses this feature"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Feature priority level"
    },
    "user_stories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["story", "acceptance"],
        "properties": {
          "story": {
            "type": "string",
            "minLength": 20,
            "description": "User story: As a [user], I want [goal] so [benefit]"
          },
          "acceptance": {
            "type": "string",
            "minLength": 10,
            "description": "Acceptance criteria"
          },
          "example": {
            "type": "string",
            "description": "Example or screenshot description"
          }
        }
      }
    },
    "core_features": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "required": ["what", "why"],
          "properties": {
            "what": {
              "type": "string",
              "description": "What this feature does"
            },
            "why": {
              "type": "string",
              "description": "Why this feature is needed"
            }
          }
        }
      }
    },
    "business_rules": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10
      },
      "description": "Business constraints and rules"
    },
    "success_metrics": {
      "type": "object",
      "properties": {
        "user_experience": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "business_impact": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technical or business constraints"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Assumptions made during planning"
    },
    "business_risks": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "required": ["risk", "impact", "mitigation"],
          "properties": {
            "risk": {
              "type": "string",
              "description": "Risk description"
            },
            "impact": {
              "type": "string",
              "description": "Potential impact"
            },
            "mitigation": {
              "type": "string",
              "description": "How to mitigate the risk"
            }
          }
        }
      }
    },
    "technical_requirements": {
      "type": "object",
      "properties": {
        "dependencies": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Required features/services"
        },
        "integrations": {
          "type": "array",
          "items": { "type": "string" },
          "description": "External APIs/services"
        },
        "performance": {
          "type": "object",
          "properties": {
            "sla": { "type": "string" },
            "response_time": { "type": "string" },
            "throughput": { "type": "string" }
          }
        },
        "security_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"]
        },
        "compliance": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Compliance requirements (GDPR, SOX, etc)"
        }
      }
    },
    "rollout": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["all-at-once", "phased", "canary", "blue-green"]
        },
        "feature_flags": { "type": "boolean" },
        "approval_required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "timeline": { "type": "string" },
        "budget": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
